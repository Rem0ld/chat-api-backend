datasource db {
  provider = "postgresql"
  url      = env("psql postgresql://pielov:1234@localhost:6432/chat_api")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int       @id @default(autoincrement())
  username      String    @unique
  email         String    @unique
  created_at    DateTime
  updated_at    DateTime
  password_hash String
  Message       Message[]
}

model Message {
  id         Int      @id @default(autoincrement())
  created_at DateTime
  updated_at DateTime
  author_id  Int
  author     User     @relation(fields: [author_id], references: [id])
}
